<h1>
    <%= gravatar_for @user %>
    
    <%= @user.name %>
    
    <ul>
    <%= form_for(@user) do |f| %>
        <%= render 'shared/error_messages', object: f.object %>
        <li>
            <%= f.label :profile %>
            <%= f.text_field :profile %>
        </li>
        <li>
            <%= f.label :age %>
            <%= f.text_field :age %>
        </li>
        <li>
            <%= f.label :hobby %>
            <%= f.text_field :hobby %>
        </li>
        <%= f.submit class: "btn btn-sm btn-primary" %>
    <% end %>
    </ul>
</h1>
